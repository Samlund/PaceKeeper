<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.pacekeeper.MainActivity" android:visibility="visible" tools:visibility="visible">

    <Button
            android:id="@+id/confirmButton"
            style="@style/Widget.Material3.Button.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="-20dp"
            android:layout_marginEnd="160dp"
            android:layout_marginBottom="32dp"
            android:text="Confirm"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/speedInput" android:visibility="visible"
            tools:visibility="visible"/>
    <EditText
            android:id="@+id/speedInput"
            android:layout_width="213dp"
            android:layout_height="48dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="270dp"
            android:layout_marginEnd="98dp"
            android:layout_marginBottom="55dp"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintBottom_toTopOf="@+id/confirmButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:visibility="visible"
            tools:visibility="visible"/>
    <TextView
            android:text="@string/pacekeeper"
            android:layout_width="130dp"
            android:layout_height="31dp" android:id="@+id/textView"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="121dp" android:layout_marginEnd="160dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="148dp" android:visibility="visible" tools:visibility="visible"
            app:layout_constraintHorizontal_bias="0.782"/>
    <TextView
            android:id="@+id/speedText"
            android:text="@string/_0_00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="288dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="160dp"
            android:layout_marginEnd="160dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="150dp"
            app:layout_constraintVertical_bias="0.578"
            android:visibility="visible" tools:visibility="visible"/>
    <TextView
            android:text="@string/n_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/viewStatus"
            android:layout_marginEnd="196dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="157dp"
            android:layout_marginTop="33dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginBottom="50dp" app:layout_constraintBottom_toTopOf="@+id/speedInput"
            app:layout_constraintVertical_bias="0.233" android:visibility="visible" tools:visibility="visible"
            app:layout_constraintHorizontal_bias="0.58"/>
    <TextView
            android:text="@string/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="120dp"
            android:layout_marginTop="33dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginBottom="190dp" app:layout_constraintBottom_toTopOf="@+id/speedInput"
            app:layout_constraintEnd_toStartOf="@+id/viewStatus" android:layout_marginEnd="46dp"
            android:visibility="visible" tools:visibility="visible" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="@string/speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            tools:visibility="visible" android:visibility="visible"
            android:layout_marginTop="-50dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginBottom="139dp" app:layout_constraintBottom_toTopOf="@+id/speedInput"
            app:layout_constraintEnd_toStartOf="@+id/speedText" android:layout_marginEnd="46dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="55dp"
            app:layout_constraintHorizontal_bias="0.75" app:layout_constraintVertical_bias="0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>